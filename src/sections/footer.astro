---
import { SOCIALS } from "@config";
import { Icon } from "astro-icon/components";
---

<footer class="grid-container">
  <Icon name="logo" />
  <h6 class="display-sm">Berotte <br />Consultancy Associates</h6>
  <nav class="grid-column--inset">
    <div class="socials">
      {
        SOCIALS.map((social) => {
          return (
            <a href={social.href}>
              <Icon name={social.icon.name} />
            </a>
          );
        })
      }
    </div>
    <div class="links body-lg">
      <a class="body-lg" href="#about">About</a>
      <a href="#press">Services</a>
      <a href="#press">Press</a>
    </div>
    <div class="footer-text body-md">
      <p>Â© 2024 All rights reserved</p>
      <a href="#home">Back to Top</a>
    </div>
  </nav>

  <style>
    footer {
      --_gap: 2rem;
      background-color: var(--primary-dark);
      color: var(--secondary);
      text-align: center;
      align-items: center;
      width: 100%;
      padding-block: clamp(1.5rem, 2vw, 2rem);
      border-top-left-radius: 0.75rem;
      border-top-right-radius: 0.75rem;
      margin-block-start: auto;
    }
    footer [data-icon="logo"] {
      --logo-size: clamp(5rem, 10vw, 9.375rem);
      width: var(--logo-size);
      height: var(--logo-size);
      margin-inline: auto;
      margin-bottom: var(--_gap);
    }
    footer h6 {
      text-transform: uppercase;
      margin-bottom: var(--_gap);
    }
    footer nav {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }
    .socials {
      display: flex;
      gap: 1rem;
      svg {
        width: 2rem;
        height: 2rem;
        stroke: currentColor;
        stroke-width: 3;
      }
    }
    .links {
      display: flex;
      gap: 1rem;
    }
    .footer-text {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
    }
  </style>
</footer>
