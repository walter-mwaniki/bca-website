---
import { getCollection } from "astro:content";
import Card from "@components/Card.astro";
const blogEntries = await getCollection("blogs");
---

<section id="in-the-press">
  <h1 class="inset heading-lg">In the Press</h1>
  <div id="blogs" class="inset blogs">
    {
      blogEntries.map((blogPostEntry) => (
        <Card
          title={blogPostEntry.data.title}
          body={blogPostEntry.data.url || "Read More"}
          href={blogPostEntry.data.url || blogPostEntry.slug}
          layout="landscape"
        />
      ))
    }
  </div>
</section>

<style>
  .blogs {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 1rem 2rem;
    margin-block: 1rem;
  }
