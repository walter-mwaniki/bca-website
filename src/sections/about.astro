<style>
  section#about {
    position: relative;
    overflow: hidden;
  }
  section#about > .inset > .ruler {
    position: absolute;
    top: 50%;
    right: 4.5rem;
    border: 1px solid black;
    border-left: none;
    padding-inline-end: 0.5rem;
    padding-block: 0.5rem;
    height: 100%;
    object-fit: cover;
    display: grid;
    grid-auto-rows: auto;
    overflow-y: hidden;
    transform: translateX(100%) translateY(-50%);
  }

  section#about > .vertical-line {
    position: absolute;
    top: 0;
    right: 4.5rem;
    width: 1px;
    height: 100%;
    background-color: black;
  }

  section#about .inset {
    position: relative;
  }
  .about-item {
    --_item-padding-left: clamp(1rem, 2vw, 2rem);
    --_svg-size: clamp(1rem, 2vw, 1.5rem);
    max-width: 70%;
    @media screen and (max-width: 680px) {
      max-width: 90%;
    }
  }

  .about-item > h2 {
    position: relative;
    padding-left: var(--_item-padding-left);
    border-left-style: solid;
    border-left-width: 2px;
  }

  .about-item:first-of-type > h2 {
    border-image: linear-gradient(
        to top,
        var(--primary),
        var(--primary) 50%,
        transparent 50%,
        transparent
      )
      2;
  }

  .about-item:not(:first-of-type) > h2 {
    border-left-color: var(--primary);
  }

  .body-lg {
    padding-left: var(--_item-padding-left);
    border-left: 2px solid var(--primary);
    padding-top: 1rem;
  }

  .about-item > .body-lg {
    padding-bottom: 3rem;
  }

  .about-item:nth-last-of-type(2) > .body-lg {
    padding-bottom: 0;
  }
  .about-item > h2 > svg {
    width: var(--_svg-size);
    height: var(--_svg-size);
    fill: var(--primary);
    position: absolute;
    top: 50%;
    left: calc(-1 * var(--_svg-size) / 2);
    transform: translateY(-50%);
  }
  svg.stacked-books {
    position: absolute;
    right: 4.5rem;
    bottom: 0;
    width: clamp(10rem, 18vw, 20rem);
    aspect-ratio: 310 / 250;
    height: auto;
    @media screen and (max-width: 860px) {
      display: none;
    }
  }
  section#about > .inset > .ruler,
  section#about > .vertical-line {
    @media screen and (max-width: 680px) {
      display: none;
    }
  }
</style>
